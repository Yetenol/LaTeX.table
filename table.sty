\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{sty/table}

\RequirePackage{tabularx}   % Provide {tabularx} to evenly spaced columns
\RequirePackage{booktabs}   % Standardized horizontal lines in tables
\RequirePackage{pgfplotstable}   %  Generate tabulars from raw data

% Provide columntypes to align the text in an evenly spaced columns
\newcolumntype{L}{>{\raggedright\arraybackslash}X}  % left-aligned column
\newcolumntype{R}{>{\raggedleft\arraybackslash}X}   % right-aligned column
\newcolumntype{C}{>{\centering\arraybackslash}X}    % center-aligned column

% Apply default PgfplotsTable layout
\pgfplotsset{
    compat = newest % don't run in backwards compatibility mode
}
\pgfplotstableset{
    every head row/.style = {
        before row = \toprule, 
        after row = \midrule
    },
    every last row/.style = {
        after row = \bottomrule
    },
    col sep = comma, 
    header = true
}